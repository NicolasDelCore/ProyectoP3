@model EcosistemasMarinos.MVC.Models.UsuarioRegistroViewModel

@{ ViewData["Title"] = "Registro de usuarios"; }

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@Model.Alias" class="control-label"></label>
                <input asp-for="@Model.Alias" class="form-control" />
                <span asp-validation-for="@Model.Alias" class="text-danger"></span>
            </div>

            @if (Model != null && Model.ListadoRoles != null)
            {
                <div class="form-group">
                    <label class="control-label">Rol</label>
                    <select asp-for="@Model.Rol">
                        @foreach (EcosistemasMarinos.LogicaNegocio.Enums.Roles _rol in Model.ListadoRoles) {
                            <option value="@_rol">@_rol.ToString()</option>
                        }
                        <option value="" disabled hidden selected>Seleccione rol</option>
                    </select>
                    <span asp-validation-for="@Model.Rol" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="@Model.Password" class="form-control" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PasswordConfirmar" class="control-label"></label>
                <input type="password" asp-for="@Model.PasswordConfirmar" class="form-control" />
                <span asp-validation-for="@Model.PasswordConfirmar" class="text-danger"></span>
            </div>
            
            <hr />
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
            <span>@ViewBag.Mensaje</span>
        </form>
    </div>
</div>