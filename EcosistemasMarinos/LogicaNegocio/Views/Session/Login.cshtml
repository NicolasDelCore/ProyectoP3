@model EcosistemasMarinos.MVC.Models.UsuarioLoginViewModel

@{
    ViewData["Title"] = "Login";
}
<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@Model.Alias" class="control-label"></label>
                <input asp-for="@Model.Alias" class="form-control" />
                <span asp-validation-for="@Model.Alias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password" class="control-label"></label>
                <input type="password" asp-for="@Model.Password" class="form-control" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <span>@ViewBag.Error</span>
        </form>
    </div>
</div>